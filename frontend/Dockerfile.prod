FROM node:16-alpine

ARG REACT_APP_STRAPI_AUTH_TOKEN
ENV REACT_APP_STRAPI_AUTH_TOKEN $REACT_APP_STRAPI_AUTH_TOKEN

ARG REACT_APP_STRAPI_URL
ENV REACT_APP_STRAPI_URL $REACT_APP_STRAPI_URL

WORKDIR /gettem
COPY build build
RUN yarn global add serve
RUN ls

EXPOSE 3000
CMD ["serve","-s", "build", "-p", "3000"]  